style.
    #avatar {
        border-radius: 50%;
        width: 40px;
        vertical-align: middle;
        padding: 10px;
    }

if user
    img#avatar(src="https://cdn.discordapp.com/avatars/" + user.id + "/" + user.avatar)
    span @#{user.username}<sup>##{user.discriminator}</sup>
    span: a(href="/logout", style="padding-left: 20px;") Logout
else
    a(href="/login") Login

